<h1>Posts Index</h1>

<table>
  <tr>
    <th>Title:</th>
    <th>Post:</th>
    <th><colspan="2"></th>
  </tr>

  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= link_to 'Show', post_path(post) %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post_path(post),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
  </tr>

<% end %>
</table>
